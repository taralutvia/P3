#include <iostream>

using namespace std;

int main()
{
    float panjang, lebar, jarijari, Luas4, Luassetling, Luastotal;

    cout << "Menghitung luas bangun datar" << endl;

    cout << "Panjang      :" ;
    cin >> panjang;

    cout << "Lebar        :" ;
    cin >> lebar;

    cout << "Jari-jari    :" ;
    cin >> jarijari;
    cout << endl << endl;

    Luas4 = panjang*lebar;
    cout << "Luas segi empat              :" << Luas4 << endl;
    Luassetling = (3.14*jarijari*jarijari)/2;
    cout << "Luas setengah lingkaran      :" << Luassetling << endl;
    Luastotal = Luas4+Luassetling;
    cout << "Luas bangun datar            :" << Luastotal << endl;

    return 0;
}
